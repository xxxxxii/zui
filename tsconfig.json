{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["packages/*"]
    }
  },
  "include": [
    "src/*.tsx",
    "src/**/*.ts",
    "./**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "**/*.md",
    "packages/message/index.ts",
    "packages/message/index.ts",
    "packages/text/src/text.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
